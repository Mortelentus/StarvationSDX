<!-- NUCLEAR POWER -->
<configs>
<config name="recipes">
<append xpath="/recipes">
	<recipe name="plutoniumRing" count="1" scrapable="False" craft_area="anvil1" craft_tool="smithHammer" material_based="true">
		<ingredient name="forgedSteel" count="15" />
	</recipe>
	<recipe name="nuke" count="1" scrapable="False" craft_area="electronicWorkbench" craft_tool="radiationGloves" craft_time="3">
		<ingredient name="plutonium" count="2" />
		<ingredient name="forgedSteel" count="50" />
		<ingredient name="shortMetalPipe" count="20" />
		<ingredient name="spring" count="10" />
		<ingredient name="gunPowder" count="40" />
	</recipe>
	<recipe name="depletedUranium" count="2" scrapable="False">
		<ingredient name="enrichedUranium" count="1" />
	</recipe>
	<recipe name="enrichedUranium" count="5" scrapable="False" craft_area="workbenchBig" craft_tool="gasCentrifuge" craft_time="3">
		<ingredient name="uranium" count="5" />
		<ingredient name="gasTank" count="1" />
	</recipe>
	<recipe name="762mmBulletPL" count="500" scrapable="True" craft_area="electronicWorkbench" craft_tool="radiationGloves">
		<ingredient name="762mmBullet" count="500" />
		<ingredient name="depletedUranium" count="2" />
	</recipe>
</append>	
</config>	
<config name="items">	
<append xpath="/items">	
	<item id="" name="plutoniumRing">
		<property name="DescriptionKey" value="plutoniumRingDesc" />
